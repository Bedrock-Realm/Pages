{
  "format_version": "1.20.50",
  "animation_controllers": {
    "controller.animation.nm_orca": {
      "states": {
        "default": {
          "animations": ["idle"],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true,
          "transitions": [
            { "death": "q.health <= 1" },
            { "move": "query.ground_speed >= 0.2" },
            { "attack": "query.is_delayed_attacking" }
          ]
        },
        "move": {
          "animations": ["move"],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true,
          "transitions": [
            { "death": "q.health <= 1" },
            { "default": "query.ground_speed < 0.2" },
            { "attack": "query.is_delayed_attacking" }
          ]
        },
        "attack": {
          "animations": ["attack"],
          "blend_transition": 0.5,
          "blend_via_shortest_path": true,
          "transitions": [{ "default": "!query.is_delayed_attacking" }]
        },
        "death": {
          "animations": ["death"]
        }
      }
    }
  }
}
