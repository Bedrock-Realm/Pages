{
  "format_version": "1.20.50",
  "animation_controllers": {
    "controller.animation.nm_flamingo": {
      "states": {
        "default": {
          "animations": [
            "idle"
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true,
          "transitions": [
            {
              "death": "q.health <= 1"
            },
            {
              "move": "query.ground_speed >= 0.2"
            }
          ]
        },
        "move": {
          "animations": [
            "move"
          ],
          "blend_transition": 0.2,
          "blend_via_shortest_path": true,
          "transitions": [
            {
              "death": "q.health <= 1"
            },
            {
              "default": "query.ground_speed < 0.2"
            }
          ]
        },
        "death": {
          "animations": [
            "death"
          ]
        }
      }
    }
  }
}
