{
  "format_version": "1.21.20",
  "minecraft:block": {
    "description": {
      "identifier": "nm:plushie_flamingo",
      "states": {
        "lp:angled": [false, true],
        "lp:cardinal": [4, 0, 2, 6]
      },
      "menu_category": {
        "category": "items",
        "group": "itemGroup.name.anvil"
      }
    },
    "components": {
      "minecraft:geometry": {
        "identifier": "geometry.plushie_flamingo",
        "bone_visibility": {
          "main": "!(q.block_state('lp:angled'))",
          "angle": "q.block_state('lp:angled')"
        }
      },
      "minecraft:map_color": "#f2a2b2",
      "minecraft:material_instances": {
        "*": {
          "render_method": "alpha_test",
          "texture": "plushie_flamingo",
          "face_dimming": false,
          "ambient_occlusion": false
        }
      },
      "minecraft:collision_box": false,
      "minecraft:selection_box": {
        "origin": [-5, 0, -5],
        "size": [10, 14, 10]
      },
      "minecraft:destructible_by_explosion": true,
      "minecraft:destructible_by_mining": 4,
      "minecraft:custom_components": ["lp:rotation"]
    },
    "permutations": [
      {
        "condition": "query.block_state('lp:cardinal') == 0",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 0, 0]
          }
        }
      },
      {
        "condition": "query.block_state('lp:cardinal') == 4",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 180, 0]
          }
        }
      },
      {
        "condition": "query.block_state('lp:cardinal') == 2",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 270, 0]
          }
        }
      },
      {
        "condition": "query.block_state('lp:cardinal') == 6",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 90, 0]
          }
        }
      },
      {
        "condition": "query.block_state('lp:angled')",
        "components": {
          "minecraft:selection_box": {
            "origin": [-5, 0, -5],
            "size": [10, 14, 10]
          }
        }
      }
    ]
  }
}
